<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/jump_to_recyclerView"
      android:layout_width="150dp"
      android:layout_height="wrap_content"
      android:text="@string/RecyclerView"
      android:textAllCaps="false"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/jump_to_multiple"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/Multiple"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jump_to_recyclerView" />

    <Button
        android:id="@+id/jump_to_image"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/Image"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jump_to_multiple" />

  </androidx.constraintlayout.widget.ConstraintLayout>